{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        // 使用package.json下的"start: debug"命令
        "start:debug"
      ],
      "runtimeExecutable": "npm",
      // 填写当前使用的node版本
      "runtimeVersion": "18.14.1",
      // 不要启动内置console
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
    
  ]
}